<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/_20sdp"
        android:gravity="center"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#292929"
            app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:text="Title Here"
                    android:fontFamily="@font/i_bold"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialogTextDesc"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:fontFamily="@font/i_medium"
                    android:text="Description here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Success"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:gravity="center">

                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dialogTextPositive"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/i_medium"
                        android:text="Retry"
                        android:background="@drawable/backg_corner_50px"
                        android:backgroundTint="@color/theme_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dialogTextNegative"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/i_medium"
                        android:text="Cancel"
                        android:background="@drawable/backg_corner_50px"
                        android:backgroundTint="@color/btn_bg_color2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>